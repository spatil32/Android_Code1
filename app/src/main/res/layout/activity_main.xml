<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spatil32.a20367073_homework1.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#b0eff6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Meal Cost $"
                android:id="@+id/lblMealCost"
                android:layout_marginTop="77dp"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtMealCost"
                android:layout_alignTop="@+id/lblMealCost"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/lblMealCost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tax Percentage %"
                android:id="@+id/lblTaxPercentage"
                android:textSize="20dp"
                android:layout_below="@+id/txtMealCost"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtTaxPercentage"
                android:layout_alignTop="@+id/lblTaxPercentage"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/txtTipPercentage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tip Percentage %"
                android:id="@+id/lblTipPercentage"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtTipPercentage"
                android:layout_alignTop="@+id/lblTipPercentage"
                android:layout_toEndOf="@+id/lblTaxPercentage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Meal Cost $"
                android:id="@+id/lblTotalMealCost"
                android:textSize="20dp"
                android:layout_below="@+id/txtTipPercentage"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtTotalMealCost"
                android:layout_alignTop="@+id/lblTotalMealCost"
                android:layout_alignStart="@+id/txtTipPercentage"
                android:editable="false"
                android:enabled="false"
                android:textColor="#08d2fa"
                android:textStyle="bold"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate Meal Cost"
                android:id="@+id/btnSubmit"
                android:layout_below="@+id/txtTotalMealCost"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/oval_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Meal Cost Calculator"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="30dp"
                android:textColor="#ff7525"
                android:textAlignment="center"
                android:textStyle="bold|italic" />
    </RelativeLayout>
</RelativeLayout>
